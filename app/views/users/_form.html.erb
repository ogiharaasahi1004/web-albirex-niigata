<%= form_with(model: micropost, local: true) do |f| %>
  
   <% if micropost.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% micropost.errors.full_messages.each do |micropost| %>
          <li><%= micropost %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, '投稿' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>
