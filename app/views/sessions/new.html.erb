<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>
    <p>新しいユーザーですか？ <%= link_to '今すぐ登録する!', signup_path %></p>
  </div>
</div>

<div class="text-center">
  <figure>
    <%# app/assets/images %>
    <%= image_tag "https://cdn.pixabay.com/photo/2013/09/16/19/36/soccer-182994_960_720.jpg", alt: "サッカーの楽しさ", id: "assets", class: "image", width: "300px" %>
    <figcaption>https://cdn.pixabay.com/photo/2013/09/16/19/36/soccer-182994_960_720.jpg, サッカーの楽しさ</figcaption>
  </figure>
</div>